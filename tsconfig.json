{
  "compilerOptions": {
    "outDir": "./.tsbuild/",
    "sourceMap": false,
    "target": "es2019",
    "module": "commonjs",
    "removeComments": true,
    "resolveJsonModule" : true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "types": [
      "node",
      "webdriverio/async",
      "@wdio/mocha-framework",
      "expect-webdriverio",
      "@wdio/globals/types",
      "@wdio/sauce-service"
    ]
  },
  "include": ["./config/**/*.ts", "./tests/**/*.ts"]
}
